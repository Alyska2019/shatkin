    <script>
        function addPizza() {
            const input = document.getElementById('pizzaName');
            const pizzaName = input.value.trim();
            
            if (pizzaName === '') {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø–∏—Ü—Ü—ã');
                return;
            }
            
            const list = document.getElementById('pizzaList');
            const li = document.createElement('li');
            
            const checkbox = document.createElement('input');
            checkbox.type = 'checkbox';
            
            const label = document.createElement('label');
            label.textContent = pizzaName;
            
            li.appendChild(checkbox);
            li.appendChild(label);
            
            list.appendChild(li);
            input.value = '';
        }

        function confirmOrder() {
            const list = document.getElementById('pizzaList');
            const selectedPizzas = [];

            const checkboxes = list.querySelectorAll('input[type="checkbox"]:checked');
            checkboxes.forEach(checkbox => {
                const label = checkbox.nextElementSibling;
                selectedPizzas.push(label.textContent);
            });

            if (selectedPizzas.length === 0) {
                alert('–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –≤—ã–±–µ—Ä–∏—Ç–µ —Ö–æ—Ç—è –±—ã –æ–¥–Ω—É –ø–∏—Ü—Ü—É!');
                return;
            }
 
            const message = '‚úÖ –ó–∞–∫–∞–∑ –ø—Ä–∏–Ω—è—Ç! –û–∂–∏–¥–∞–π—Ç–µ –¥–æ—Å—Ç–∞–≤–∫—É.\n\n–í–∞—à –∑–∞–∫–∞–∑:\n' + 
            selectedPizzas.join('\n');
 
            alert(message);
            list.innerHTML = '';
        }
    </script>
